.container{
	display: block;
  padding: 0 40rpx
}
.address,.time,.work,.describe{
	font-size: 32rpx;
	color: #333;
	font-weight: bold;
  padding: 40rpx 0;
}
.describe{
	padding-bottom: 80rpx
}
.line{
	width: 100%;
	height: 1rpx;
	background: #f5f5f5;
	margin-top: 20rpx;
}
.text{
  font-size: 28rpx;
	color: #333;
	margin-top: 30rpx;
  margin-right: 20rpx;
  font-weight: 400
}
.msg{
	font-size: 28rpx;
  line-height: 60rpx;
}
#data{
  font-size: 20rpx;
  position: absolute;
  right: -10rpx;
  top: 60rpx;
  transform: rotate(45deg);
  animation: data 5s linear infinite alternate;
}
@keyframes data{
  from{transform: rotate(45deg) scale(0.9)}
  to{transform: rotate(45deg) scale(1.1)}
}